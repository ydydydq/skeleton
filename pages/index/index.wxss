.container{
  box-sizing: border-box;
  padding: 20rpx 28rpx;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}
.username{
  width: 100rpx;
  font-size: 24rpx;
  font-weight: bold;
  text-align: center;
}
.block{
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin-top: 40rpx;
}
